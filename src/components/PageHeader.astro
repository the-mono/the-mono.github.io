---

interface Props {
	title: string;
    login?: boolean;
    signup?: boolean;
}

const { title, login, signup } = Astro.props;

---

<div class="page-header" style="width: calc(100% - 30px);margin-left:20px;">
    <div class="row align-items-center">
      <div class="col">
        <div class="page-pretitle" style="font-size:1rem">
          THE MONO (BETA)
        </div>
        <h2 class="page-title">
          {title}
        </h2>
      </div>
      <div class="col-auto ms-auto">
        <div class="btn-list" style="gap:0;border-radius:20px;overflow:hidden;">
          <a href="/login" class={
            login ? "btn btn-primary" : "btn btn-outline-primary"
          }  style="border-radius:0;border-top-left-radius: 20px;border-bottom-left-radius: 20px;;">
            log in
          </a>
          <a href="/signup" class={
            signup ? "btn btn-secondary" : "btn btn-outline-secondary"
          } style="border-radius:0;border-top-right-radius: 20px;border-bottom-right-radius: 20px;;">
            sign up
          </a>
        </div>
      </div>
    </div>
</div>