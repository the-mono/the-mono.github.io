---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
import PageHeader from '../components/PageHeader.astro';
---

<Layout title="404 Not Found /mono">
	<Sidebar/>
	<div class="page-wrapper">
		<PageHeader title="Not Found (404)"/>
		<div class="page-body">
            <br/><br/><br/><br/>
            <h1 style="font-size:5rem;text-align: center;">Upps! 404</h1>
            <br/><br/>
